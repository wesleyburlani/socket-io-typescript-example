{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "include": ["server", "client", "load-balancer", "common"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.e2e-spec.ts"]
}
